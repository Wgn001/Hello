<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PersonalAct"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_top_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ig_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/back" />

        <ImageView
            android:id="@+id/ig_icon_personal"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/my_user_pic_bg"
            android:scaleType="center"
            android:src="@drawable/my_user_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/ig_xiugai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/ic_exchange"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_xiugai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="修改"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:id="@+id/rl_change_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="17dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小可爱"
                android:layout_alignParentRight="true"
                android:textColor="@color/color999999"
                android:textSize="15sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            style="@style/MyLineStyle"
            android:background="@color/color999999"
            android:layout_marginHorizontal="17dp"
            />
        <RelativeLayout
            android:id="@+id/rl_change_phone"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="17dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12598745689"
                android:layout_alignParentRight="true"
                android:textColor="@color/color999999"
                android:textSize="15sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            style="@style/MyLineStyle"
            android:background="@color/color999999"
            android:layout_marginHorizontal="17dp"/>
    </LinearLayout>

</LinearLayout>