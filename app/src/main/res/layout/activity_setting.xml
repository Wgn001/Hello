<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingAct"
    android:background="@color/colorEEEEEE">

    <include layout="@layout/title_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:background="@color/colorWhite">

            <RelativeLayout
                android:id="@+id/rl_change_password"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码修改"
                    android:textSize="15sp"
                    android:textColor="#232323"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/con_more"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/MyLineStyle"
                android:background="@color/colorEEEEEE"/>

            <RelativeLayout
                android:id="@+id/rl_privacy"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐私"
                    android:textSize="15sp"
                    android:textColor="#232323"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/con_more"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <View
                style="@style/MyLineStyle"
                android:background="@color/colorEEEEEE"/>

            <RelativeLayout
                android:id="@+id/rl_new_message"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新消息通知"
                    android:textSize="15sp"
                    android:textColor="#232323"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/con_more"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <View
                style="@style/MyLineStyle"
                android:background="@color/colorEEEEEE"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:background="@color/colorWhite">

            <RelativeLayout
                android:id="@+id/rl_clear_buffer"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除缓存"
                    android:textSize="15sp"
                    android:textColor="#232323"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/con_more"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/MyLineStyle"
                android:background="@color/colorEEEEEE"/>




        </LinearLayout>


        <Button
            android:id="@+id/btn_logout"
            android:textColor="@color/colorFF6767"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:background="@color/color999999"
            android:text="退出登录"
            android:stateListAnimator="@null"/>
    </LinearLayout>

</LinearLayout>