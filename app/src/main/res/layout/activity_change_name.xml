<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChangeNameAct"
    android:background="@color/colorWhite">

    <include layout="@layout/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="15dp"
            >
            <EditText
                android:id="@+id/edt_change_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小可爱"
                android:ems="10"
                android:lines="1"
                android:textColor="@color/color0A0A0A"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/ig_change_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sr_close"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <View
            style="@style/MyLineStyle"
            android:layout_marginHorizontal="15dp"
            android:background="@color/color999999"/>
    </LinearLayout>

</LinearLayout>