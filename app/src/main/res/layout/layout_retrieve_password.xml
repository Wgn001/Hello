<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_phone">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="84dp"
        android:src="@drawable/logo"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本港台社交"
        android:textColor="#FFFF"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:background="#FFFFFF"
                android:padding="7dp"
                app:srcCompat="@drawable/login_ic_phone" />

            <EditText
                android:id="@+id/edt_phone_ret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:inputType="textPersonName"
                android:textColorHint="#CCCCCC"
                android:textSize="15sp"
                android:ems="13"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="37dp" />

        </LinearLayout>
        <View style="@style/MyLineStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:background="#FFFFFF"
                android:padding="7dp"
                app:srcCompat="@drawable/login_ic_yzm" />

            <EditText
                android:id="@+id/edt_verification_ret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView3"
                android:layout_alignLeft="@+id/imageView3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="74dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:textSize="15sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="发送验证码"
                android:textColor="#FFFFFF"
                android:background="@drawable/circular_3_fe5455"
                android:stateListAnimator="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <View
            style="@style/MyLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:background="#FFFFFF"
                android:padding="7dp"
                app:srcCompat="@drawable/login_ic_mm" />

            <EditText
                android:id="@+id/edt_password_ret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:inputType="textPersonName"
                android:textColorHint="#CCCCCC"
                android:textSize="15sp"
                android:ems="13"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="37dp"
                android:background="@null"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <View
            style="@style/MyLineStyle" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6-16位字符，区分大小写"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="180dp"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:text="确定"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/circular_5_ccccc"
        android:layout_marginTop="66dp"
        android:layout_gravity="center"
        android:stateListAnimator="@null"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/btn_new_user_ret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:background="#00FFFFFF"/>

        <Button
            android:id="@+id/btn_login_ret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="177dp"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:background="#00FFFFFF"/>

    </LinearLayout>

</LinearLayout>